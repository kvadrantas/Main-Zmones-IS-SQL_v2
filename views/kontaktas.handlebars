<h2>Kontaktas:</h2>
<form action="/kontaktas" method="post">
  {{#if kontaktas}}
  <input type="hidden" name="id" value="{{kontaktas.id}}">
  <input type="hidden" name="zmogusId" value="{{kontaktas.zmones_id}}">
  {{/if}}
  {{#if zmogusId}}
  <input type="hidden" name="zmogusId" value="{{zmogusId}}">
  {{/if}}

<label for="tipas">Tipas<span>*</span></label>
<select required id="tipas" name="tipas" type="text">
  <option value="email">email</option>
  <option value="mob">mob</option>
  <option value="Facebook">Facebook</option>
  <option value="LinkedIn">LinkedIn</option>
</select><br>

